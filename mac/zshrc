PROMPT+=" %{$fg[red]%}%D{%Y-%m-%d %H:%M:%S}"
PROMPT+=' $(git_prompt_info)'
PROMPT+=" %{$fg[cyan]%}%~"
PROMPT+=$'\n'
PROMPT+="%{$fg[white]%}$ "
PROMPT+="%{$reset_color%}"
