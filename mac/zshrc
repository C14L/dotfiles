
# -- options ---------------

setopt HIST_IGNORE_SPACE

CASE_SENSITIVE="true"
HIST_STAMPS="yyyy-mm-dd"

plugins=(git)

export EDITOR='vim'

# -- aliases ---------------

alias ll="ls -la"
alias lll="ls -lah"
alias o="open ."  # open current dir in finder

# --- theme ----------------

ZSH_THEME=""

